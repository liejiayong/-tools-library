.commentindex{
  display: inline-block;
  width: 100%;
}
.jy-comment{
  padding: 42rpx 0 32rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
       box-sizing: border-box;
  border-top: 1rpx solid #f2f2f2;
}
.jy-profile{
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
}
.jy-image{
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 68rpx;
     -moz-box-flex: 0;
      -ms-flex: 0 0 68rpx;
          flex: 0 0 68rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  overflow: hidden;
}
.jy-image .image{
  display: inline-block;
  width: 68rpx;
  height: 68rpx;
  -moz-border-radius: 34rpx;
       border-radius: 34rpx;
}
.jy-profile .cell{
  margin-left: 18rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
     -moz-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  height: 68rpx;
  line-height:68rpx;
  overflow:hidden;
}
.jy-profile .author{
  display: inline-block;
  max-width: 400rpx;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: bold;
  color: #1a1a1a;
}
.jy-like{
  float:right;
  font-size: 24rpx;
}
.jy-like image{
  /* cursor: pointer; */
}
.jy-like.liked{
  color: #fe2f43;
}
.jy-like .btn-like{
  display: inline-block;
  padding: 0 10rpx 0 20rpx;
  width: 33rpx;
  height: 32rpx;
}
.jy-content{
  padding: 10rpx 0 0 82rpx;
}
.jy-content .content{}
.jy-content .date{
  margin-top: 15rpx;
  font-size: 20rpx;
  color: #999;
}
.nocomment{
  margin: 40rpx 0 80rpx;
  text-align: center;
  color: #999;
}