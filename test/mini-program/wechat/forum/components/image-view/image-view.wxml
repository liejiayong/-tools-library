<view wx:if="{{list && list.length}}" class="imageviewindex">
  <block wx:if="{{list && list.length == 1}}">
    <image
      catchtap="handleImgWX"
      data-index="0"
      data-url="{{list[0].url}}"
      src="{{list[0].url}}"
      mode="aspectFill"
      class="img-single"
    ></image>
  </block>

  <block wx:elif="{{list && list.length > 1}}">
    <div class="jy-flex">
      <block wx:for="{{list}}" wx:key="index">
        <div class="jy-flex-item">
          <image
            catchtap="handleImgsWX"
            data-index="{{index}}"
            src="{{item.url}}"
            mode="aspectFill"
            class="img"
          ></image>
        </div>
      </block>
    </div>
  </block>

  <view wx:if="{{list && list.length > 3}}" class="count">{{list.length}}  å¼ </view>
</view>

