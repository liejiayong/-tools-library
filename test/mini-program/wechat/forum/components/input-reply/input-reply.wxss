.inputreplyindex {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 15rpx;
  height: 98rpx;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  box-shadow: 0 0 4rpx #f1f1f1;
  box-sizing: border-box;
  z-index: 500;
}
.jy-input {
  position: relative;
  display: flex;
  width: 100%;
  height: 98rpx;
  justify-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.input_content {
  position: relative;
  padding: 0 30rpx;
  margin: 0 auto;
  width: 630rpx;
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 34rpx;
  font-size: 26rpx;
  color: #999;
  box-sizing: border-box;
  overflow: auto;
  -webkit-text-fill-color: #999;
  /* -webkit-opacity: 1;
  opacity: 1; */
}
.input-mask {
  position: absolute;
  left:5rpx;
  top:15rpx;  
  width: 610rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background-color: #f3f3f3;
  box-sizing: border-box;
  z-index: -1;
}
.input_btn_send {
  flex: 0 0 104rpx;
  width: 104rpx;
  height: inherit;
  text-align: center;
  line-height: 98rpx;
  border-radius: 6rpx;
}
.input_btn_send_active {
  font-weight: bold;
  color: #fbb84a;
}
.input_reply_mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 400;
}
