.jy-popup{
    display: none;
    opacity: 0;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 2000;
    transition: opacity .3s ease linear;
    will-change: opacity;
}
.jy-popup.active {
    display: block;
    opacity: 1;
    transition: opacity .3s ease linear;
}
.mask{
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.6);
}
.container{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
    z-index: 20;
    background-color: #fff;
}
.oporate{
    padding: 30rpx 0;
    width: inherit;
    border-bottom: 1rpx solid #f5f5f5;
}
.oporate:last-of-type{
    border-bottom: none;
}