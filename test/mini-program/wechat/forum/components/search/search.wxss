.jy-search-bar {
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  -moz-border-radius: 35rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  background-color: #f5f5f5;
  color: #999;
}
.search-label,
.search-input {
  display: inline-block;
  width: 100%;
  height: 70rpx;
  overflow: hidden;
  white-space: nowrap;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
}
.search-input {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}
.search-label {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate3d(-50%,0,0);
  max-width: 500rpx;
  z-index: 200;
}
.search-label icon,
.search-label text {
  vertical-align: middle;
  height: 32rpx;
  margin-right: 8rpx;
}
.search-label icon {
  line-height: 40rpx;
}
.search-input input{
  height: 70rpx;
}