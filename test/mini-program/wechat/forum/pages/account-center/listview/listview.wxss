.jy-listview{
    position: relative;
    border-top: 12rpx solid #f6f7f8;
}
.listview-item{
    position: relative;
    display: flex;
    padding: 0 40rpx;
    justify-content: space-between;
    align-items: center;
    height: 110rpx;
    overflow: hidden;
    box-sizing: border-box;
}
.listview-item::before {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 40rpx;
    right: 40rpx;
    border-bottom: 1rpx solid #f2f2f2;
}
.jy-lt{
    flex: 1;
    font-size: 0;
}
.avatar{
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}
.text{
    display: inline-block;
    margin-left: 30rpx;
    vertical-align: middle; 
    font-size: 30rpx;
    font-weight: bold;
}
.jy-rt{
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.jy-desc{
    margin-right: 20rpx;
    vertical-align: middle;
    font-size: 26rpx;
    color: #999;
}
.icon-arrow{
    display: inline-block;
    width: 13rpx;
    height: 23rpx;
    vertical-align: middle;
}