.jy-popup{
    display: none;
    opacity: 0;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1000;
    transition: opacity .3s ease linear;
    will-change: opacity;
}
.jy-popup.active {
    display: block;
    opacity: 1;
    transition: opacity .3s ease linear;
}
.mask{
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.6);
}
.container{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
    z-index: 20;
    background-color: #fff;
}
.header{
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999;
}
.oporate{
    position: relative;
    height: 99rpx;
    line-height: 99rpx;
    width: inherit;
    color: #1a1a1a;
    cursor: pointer;
}
.oporate::before{
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 40rpx;
    right: 40rpx;
    border-top: 1rpx solid #f5f5f5;
}