.commentmodalindex{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.commentmodal {
  position: fixed;
  top: 460rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
  box-shadow: 0 0 10rpx #ccc;
}
.header {
  position: relative;
  height: 66rpx;
  overflow: hidden;
}
.title {
  font-size: 20rpx;
  color: #b7b7b7;
  height: inherit;
  line-height: 66rpx;
  text-align: center;
}
.btn-close {
  display: block;
  padding:10rpx;
  position: absolute;
  top: 26rpx;
  right: 40rpx;
  width: 28rpx;
  height: 28rpx;
}
.scroll-view {
  position: absolute;
  top: 66rpx;
  bottom: 98rpx;
  left: 0;
  padding: 0 40rpx;
  width: 100%;
  overflow: auto;
  box-sizing: border-box;
}
.jy-comment {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 40rpx;
  height: 98rpx;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.input-mask{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 670rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background-color: #f3f3f3;
  box-sizing: border-box;
}
.input-send {
  position: relative;
  padding: 0 30rpx;
  margin: 0 auto;
  width: 670rpx;
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 34rpx;
  font-size: 26rpx;
  color: #777;
  box-sizing: border-box;
  overflow: auto;
}
